<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2d2d2d"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_activity_header_height" >


            <ImageView
                android:id="@+id/header_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2d2d2d"/>


            <net.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:layout_gravity="bottom"
                android:background="@null"
                />



            <RelativeLayout
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/user_info_layout"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:id="@+id/first_name"
                    android:textSize="50sp"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    tools:text="Daniel"
                    android:layout_gravity="center" />

                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_views"
                    android:textSize="17sp"
                    android:textColor="#55C1AD"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@+id/first_name"
                    android:layout_centerHorizontal="true"
                    tools:text="637 VIEWS" />

                <net.egobeta.ego.AutoResizeTextView
                    android:id="@+id/etStatus"
                    android:layout_width="325dp"
                    android:layout_height="70dp"
                    android:ellipsize="none"
                    android:maxLines="3"
                    tools:text="this is a example of how much text i can fit here. How much more can i put here?"
                    android:textSize="22sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_below="@+id/profile_views"
                    android:layout_marginBottom="1dp"
                    android:layout_centerHorizontal="true"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tapToEdit"
                    android:layout_below="@+id/etStatus"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tap_to_edit_button_9c9c9c"
                    android:background="@null"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

            <net.egobeta.ego.FacebookPictureViewRound
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:layout_marginBottom="90dp"
                tools:src="@drawable/lucas_profile"
                android:padding="10dp"
                />


        </FrameLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >

            <ImageView
                android:id="@+id/toolbar_icon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/toolbar_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"

                />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text=""
                android:layout_toRightOf="@+id/toolbar_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:elevation="0dp"
            >




        </android.support.v7.widget.Toolbar>


    </FrameLayout>





</RelativeLayout>