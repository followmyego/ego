<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp">

    <TextView
        android:id="@+id/about_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="About"/>

    <TextView
        android:id="@+id/age_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_header"
        android:textColor="#55C1AD"
        android:text="age"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_header"
        android:textColor="#888888"
        android:text="34 - 36"
        android:textSize="24sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/lives_in_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_header"
        android:layout_toRightOf="@+id/age_header"
        android:textColor="#55C1AD"
        android:text="lives in"
        android:textSize="18sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/lives_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lives_in_header"
        android:layout_alignLeft="@+id/lives_in_header"
        android:textColor="#888888"
        android:text="Vancouver, BC"
        android:textSize="24sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/works_at_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:textColor="#55C1AD"
        android:text="works at"
        android:textSize="18sp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/works_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/works_at_header"
        android:textColor="#888888"
        android:text="Walmart, Vancouver"
        android:textSize="24sp"
        android:layout_marginTop="12dp" />

</RelativeLayout>