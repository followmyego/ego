<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginLayout"
    android:background="#272727"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friendsBackground"
        android:src="@drawable/friends_background"
        android:scaleType="centerCrop"
        android:alpha=".10"/>

    <ImageView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogoView"
        android:src="@drawable/n_complete_logo_slogan"
        android:scaleType="fitCenter"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/fb_login_button"
        android:src="@drawable/selector_button_facebook"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="@dimen/sign_in_button_height"
        android:layout_marginTop="@dimen/sign_in_button_margin"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"/>



</RelativeLayout>
