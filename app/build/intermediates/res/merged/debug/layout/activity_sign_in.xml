<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    tools:context="net.egobeta.ego.SignInActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friendsBackground"
        android:src="@drawable/signing_screen_bg_image"
        android:scaleType="centerCrop"
    android:alpha=".60"
        />


    <ImageView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogoView"
        android:src="@drawable/logo_without_tagline"
        android:scaleType="fitCenter"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/fb_login_button"
        android:src="@drawable/signing_facebook_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:padding="0dp"
        android:layout_below="@+id/imageLogoView"
        android:layout_centerHorizontal="true"
        android:background="@null"/>

    <TextView
        android:id="@+id/loginTexrView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/fb_login_button"
        android:layout_centerHorizontal="true"
        android:text="By continuing you agree to our Terms and Privacy Policy"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="10sp"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:visibility="invisible"/>



</RelativeLayout>
